{% extends 'FairBundle::layout.html.twig' %}

{% block content -%}
    <h1>Reports: Baked Goods</h1>

    <table class="table table-striped table-hover table-sort">
        <thead>
        <tr>
            <th>Student</th>
            <th>HR</th>
            <th>Parents (Phone)</th>
            <th>Type of Baked Good</th>
        </tr>
        </thead>
        <tbody>
        {% for family in families %}
            <tr>
                <td>{{ family.eldest }} {{ family.name }}</td>
                <td>{{ family.eldestGrade }}</td>
                <td>{% for adult in family.spouses %}{{ adult }} ({{ adult.phone }}){% if not loop.last %}, {% endif %}{% endfor %}</td>
                <td>{{ family.bakedItem }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}