{% extends 'FairBundle::layout.html.twig' %}

{% block content -%}
    <div class="row-fluid">
        <div class="span10">
            <h3>Upload Template</h3>
            <p class="lead">This is where you will upload your saved template file.  The filename should be a unique name for you to use.  Click choose file to find your template on your computer.</p>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span5">
        <form class="form-horizontal" action="{{ path('admin_docs_create') }}" method="post" {{ form_enctype(form) }}>
            <div class="control-group">
                <div class="control-label">
                    {{ form_label(form.name) }}
                </div>
                <div class="controls">
                    {{ form_widget(form.name, {'attr': {'placeholder': 'File Name'}}) }}
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    {{ form_label(form.file) }}
                </div>
                <div class="controls">
                    {{ form_widget(form.file) }}
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button class="btn btn-primary btn-small btn-block"  type="submit">Create</button><br>
                    <a href="{{ path('admin_docs') }}">
                        <i class="icon-share-alt"></i> Back to the list of uploads
                    </a>
                </div>
            </div>
        </form>
        </div>
    </div>
{% endblock %}
