{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/fair/css/bootstrap.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/fair/css/bootstrap-responsive.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/fair/css/main.css') }}"/>
    {#{% stylesheets '@FairBundle/Resources/public/css/*' output='css/compiled/main.css' filter='cssrewrite' %}#}
        {#<link rel="stylesheet" href="{{ asset_url }}" />#}
    {#{% endstylesheets %}#}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/fair/js/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fair/js/bootstrap.js') }}"></script>
{% endblock %}

{% block body %}
    {% block header %}
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container" style="width: auto;">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="/">St. John Primary and St. Theresa School Fair Registration</a>
                    <div class="nav-collapse">
                        <ul class="nav pull-right">
                            <li class="dropdown"><a href="#" data-toggle="dropdown" class="dropdown-toggle">Admin Tools<b class="caret"></b></a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                                    <li><a tabindex="-1" href="{{ path('booth') }}">Booths</a></li>
                                    <li><a tabindex="-1" href="{{ path('auctionitem') }}">Auction Items</a></li>
                                    <li><a tabindex="-1" href="{{ path('bakeditem') }}">Baked Items</a></li>
                                </ul>
                            </li>
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <li><a href="{{ path('logout') }}">Logout</a></li>
                            {% endif %}
                        </ul>
                    </div><!-- /.nav-collapse -->
                </div>
            </div><!-- /navbar-inner -->
        </div>
    {% endblock %}

    <div class="container">
        {% block content %}
        {% endblock %}
    </div>

    {% block footer %}
        <footer class="footer">
            <div class="container">
                <p>Designed by: mE</p>
            </div>
        </footer>
    {% endblock %}
{% endblock %}