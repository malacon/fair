{% extends 'FairBundle::layout.html.twig' %}

{% block content -%}
    <h1>Auction Items List</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Description</th>
                <th>Family</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('auctionitem_show', { 'id': entity.id }) }}">{{ entity }}</a></td>
                <td>{{ entity.family.name }} ({% for spouse in entity.family.spouses %}{{ spouse }}{% if not loop.last %}, {% endif %}{% endfor %})</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('auctionitem_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('auctionitem_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('auctionitem_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
