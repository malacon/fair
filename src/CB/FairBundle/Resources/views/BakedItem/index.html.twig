{% extends 'FairBundle::layout.html.twig' %}

{% block content -%}
    <h1>Baked Items list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Description</th>
                <th>Quantity</th>
                <th>Users</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bakeditem_show', { 'id': entity.id }) }}">{{ entity.description }}</a></td>
                <td>{{ entity.quantity }}</td>
                <td>
                    <strong>Number of Families: {{ entity.getNumberOfFamiles() }}</strong>
                    <br>Families: <em>{%- for family in entity.workers -%}
                        {{ family.name }}{% if not loop.last %}, {% endif %}
                    {%- endfor -%}</em>
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bakeditem_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bakeditem_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('bakeditem_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
