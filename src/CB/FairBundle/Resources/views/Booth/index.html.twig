{% extends 'FairBundle::layout.html.twig' %}

{% block content -%}
    <h1>Booth list</h1>

    <table class="table table-striped table-hover table-sort">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Location</th>
                <th>Times</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    {{ entity.name }}
                </td>
                <td>
                    {{ entity.description }}
                </td>
                <td>
                    {{ entity.location }}
                </td>
                <td>

                </td>
                <td>
                    <a class="btn btn-success btn-small" href="{{ path('booth_edit', { 'id': entity.id }) }}">
                        Edit
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('booth_new') }}">
                Create a new booth
            </a>
        </li>
    </ul>
    {% endblock %}
