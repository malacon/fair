{% extends 'FairBundle::layout.html.twig' %}

{% block content -%}
    <h1>Booth list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Location</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('booth_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.location }}</td>
                <td>{{ entity.getWorkerLimit }}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-info btn-mini" href="{{ path('booth_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-success btn-mini" href="{{ path('booth_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('booth_new') }}">
                Create a new booth
            </a>
        </li>
    </ul>
    {% endblock %}
