{% block datePicker_widget %}
    {% spaceless %}
        <input type="text" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}"{% endif %}/>
        {% set attr = attr|merge({'class': ((attr.class|default('') ~ ' cbDatePicker' ~ ' input-small')|trim)}) %}
        {% set id = id ~ "_datepicker" %}
        {% set full_name = "datepicker_" ~ full_name %}
        <input type="text" {{ block('widget_attributes') }}/>
    {% endspaceless %}
{% endblock %}

{% block dateTimePicker_widget %}
    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' cbDateTimePicker' ~ ' input-small')|trim}) %}


    {{ form_errors(form.date) }}
    {{ form_errors(form.time) }}
    {{ form_widget(form.date, {'id' : id ~ '_date'}) }}
    {{ form_widget(form.time, {'id' : id ~ '_time', 'class': (attr.class|default('') ~ ' input-small')|trim}) }}
{% endblock %}
